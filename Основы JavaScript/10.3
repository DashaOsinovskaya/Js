<!DOCTYPE html>
<html>
    <body>
        <script charset="utf-8">
            let n=Number(prompt('Введите число'));
            if(n>0){
                alert(1);
            }
            else if(n<0){
                alert(-1);
            }
            else{
                alert(0);
            }
        </script>
    </body>
</html>
